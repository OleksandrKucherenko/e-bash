{
    "name": "e-bash-junit-tools",
    "version": "1.1.0",
    "private": true,
    "description": "JUnit XML parsing and test chunk optimization tools for e-bash",
    "scripts": {
        "parse-timings": "bun src/parse-test-timings.ts",
        "calculate-chunks": "bun src/calculate-optimal-chunks.ts",
        "sanitize": "bun src/sanitize-junit-xml.ts",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "typecheck": "bun x tsc --noEmit"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "typescript": "^5.0.0"
    }
}