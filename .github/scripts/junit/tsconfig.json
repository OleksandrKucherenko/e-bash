{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "bun-types"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "noEmit": true,
        "lib": [
            "ESNext"
        ],
        "allowImportingTsExtensions": true
    },
    "include": [
        "*.ts",
        "lib/**/*.ts",
        "__tests__/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}